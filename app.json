{
  "expo": {
    "name": "FightNight OS",
    "slug": "fightnightos",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fightnightos",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.six1fivedevs.fightnightos",
      "infoPlist": {
        "NSCalendarsUsageDescription": "FightNight OS needs calendar access to add fight events to your calendar.",
        "NSCalendarsFullAccessUsageDescription": "FightNight OS needs calendar access to add fight events to your calendar.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.six1fivedevs.fightnightos",
      "permissions": [
        "SCHEDULE_EXACT_ALARM",
        "POST_NOTIFICATIONS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#dc2626"
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "FightNight OS needs access to add fight events to your calendar."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "05604243-9a8a-43e7-989b-d7926c31374b"
      }
    }
  }
}
